---
import { SkipLink , TextCardSection } from '@littlesticks/odyssey-theme-components';
import BaseHead from '../components/head/BaseHead.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead {...seo} />
	</head>
	<body>
		<SkipLink />
		<slot name="announcement-bar" />
		<slot name="header" />
		<TextCardSection>
			<h1>HAPPY BIRTHDAY ARNOB!</h1>
			<p>
				Wish Great President Arnob happy birthday!
			</p>
		</TextCardSection>
		<main id="content">
			<slot />
		</main>
		<slot name="footer" />
	</body>
</html>
